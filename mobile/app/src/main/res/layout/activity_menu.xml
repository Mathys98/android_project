<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:text="Pseudo"
            android:textColor="@android:color/background_light"
            android:textSize="55sp"
            android:layout_below="@+id/imageView2"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_create">

        <TextView
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créer Compte"
            style="@style/TitreMenu"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_show_event"
        android:layout_below="@+id/layout_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

    <TextView
        android:id="@+id/show_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voir évènements"
        style="@style/TitreMenu"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_my_event"
        android:layout_below="@+id/layout_show_event">

    <TextView
        android:id="@+id/my_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes évènements"
        style="@style/TitreMenu"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_modif"
        android:layout_below="@+id/layout_my_event">

    <TextView
        android:id="@+id/modif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifier Compte"
        style="@style/TitreMenu"
        />

    </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/déconnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Déconnexion"
        android:textSize="24sp" />

    </RelativeLayout>


</LinearLayout>